{
  "name": "area_polling_api",
  "base_url": "http://area_polling_api:8087",
  "routes": [
    {
      "path": "/health",
      "methods": ["GET"],
      "auth_required": false,
      "internal_only": false
    },
    {
      "path": "/actions",
      "methods": ["POST", "PUT"],
      "auth_required": true,
      "internal_only": false
    },
    {
      "path": "/actions/{actionId}",
      "methods": ["GET", "DELETE"],
      "auth_required": true,
      "internal_only": false
    },
    {
      "path": "/activate/{actionId}",
      "methods": ["POST"],
      "auth_required": false,
      "internal_only": true
    },
    {
      "path": "/deactivate/{actionId}",
      "methods": ["POST"],
      "auth_required": false,
      "internal_only": true
    }
  ]
}
