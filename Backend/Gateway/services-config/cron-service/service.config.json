  "routes": [
    {
      "path": "/health",
      "methods": ["GET"],
      "auth_required": false,
      "internal_only": false
    },
    {
      "path": "/actions",
      "methods": ["POST"],
      "auth_required": false,
      "internal_only": true
    },
    {
      "path": "/activate/{actionId}",
      "methods": ["POST"],
      "auth_required": false,
      "internal_only": true
    },
    {
      "path": "/deactivate/{actionId}",
      "methods": ["POST"],
      "auth_required": false,
      "internal_only": true
    },
    {
      "path": "/actions/{actionId}",
      "methods": ["DELETE"],
      "auth_required": false,
      "internal_only": true
    }
  ]
}
