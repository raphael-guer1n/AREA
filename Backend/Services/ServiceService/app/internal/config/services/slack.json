{
  "provider": "",
  "name": "slack",
  "label": "Slack",
  "icon_url": "",
  "logo_url": "https://cdn-icons-png.flaticon.com/512/2111/2111615.png",
  "actions": [
    {
      "title": "slack_message_posted",
      "label": "Slack - Message Posted",
      "type": "webhook",
      "fields": [
        { "name": "channel_id", "type": "text", "label": "Channel ID", "required": false, "default": "" }
      ],
      "output_fields": [
        { "name": "user", "type": "text", "label": "User" },
        { "name": "channel", "type": "text", "label": "Channel" },
        { "name": "text", "type": "text", "label": "Text" },
        { "name": "ts", "type": "text", "label": "Timestamp" }
      ]
    },
    {
      "title": "slack_reaction_added",
      "label": "Slack - Reaction Added",
      "type": "webhook",
      "fields": [],
      "output_fields": [
        { "name": "user", "type": "text", "label": "User" },
        { "name": "reaction", "type": "text", "label": "Reaction" },
        { "name": "item_user", "type": "text", "label": "Item user" },
        { "name": "item", "type": "text", "label": "Item" }
      ]
    }
  ],
  "reactions": [
    {
      "title": "slack_post_message",
      "label": "Slack - Post Message",
      "url": "https://slack.com/api/chat.postMessage",
      "method": "POST",
      "bodyType": "json",
      "fields": [
        { "name": "api_key", "type": "password", "label": "Bot Token (xoxb-)", "required": true, "default": "" },
        { "name": "channel", "type": "text", "label": "Channel ID", "required": true, "default": "" },
        { "name": "text", "type": "textarea", "label": "Text", "required": true, "default": "" },
        { "name": "as_user", "type": "boolean", "label": "Post as user", "required": false, "default": "true" }
      ],
      "body_struct": [
        { "path": "channel", "type": "text", "value": "{{channel}}" },
        { "path": "text", "type": "text", "value": "{{text}}" },
        { "path": "as_user", "type": "boolean", "value": "{{as_user}}" }
      ]
    },
    {
      "title": "slack_add_reaction",
      "label": "Slack - Add Reaction",
      "url": "https://slack.com/api/reactions.add",
      "method": "POST",
      "bodyType": "json",
      "fields": [
        { "name": "api_key", "type": "password", "label": "Bot Token (xoxb-)", "required": true, "default": "" },
        { "name": "channel", "type": "text", "label": "Channel ID", "required": true, "default": "" },
        { "name": "timestamp", "type": "text", "label": "Message timestamp", "required": true, "default": "" },
        { "name": "name", "type": "text", "label": "Reaction name", "required": true, "default": "" }
      ],
      "body_struct": [
        { "path": "channel", "type": "text", "value": "{{channel}}" },
        { "path": "timestamp", "type": "text", "value": "{{timestamp}}" },
        { "path": "name", "type": "text", "value": "{{name}}" }
      ]
    }
  ]
}
