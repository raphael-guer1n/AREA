{
  "name": "notion",
  "payload_format": "json",
  "interval_seconds": 60,
  "skip_first": true,
  "request": {
    "method": "POST",
    "url_template": "https://api.notion.com/v1/databases/{{ config.database_id }}/query",
    "headers": {
      "Authorization": "Bearer {{ config.token }}",
      "Notion-Version": "2022-06-28",
      "Content-Type": "application/json"
    },
    "body_encoding": "json",
    "body_template": {}
  },
  "items_path": "results",
  "item_id_path": "id",
  "mappings": [
    { "field_key": "page_id", "json_path": "id", "type": "string" },
    {
      "field_key": "title",
      "json_path": "properties.Name.title[0].plain_text",
      "type": "string",
      "optional": true
    },
    {
      "field_key": "created_time",
      "json_path": "created_time",
      "type": "string",
      "optional": true
    },
    {
      "field_key": "last_edited_time",
      "json_path": "last_edited_time",
      "type": "string",
      "optional": true
    },
    {
      "field_key": "url",
      "json_path": "url",
      "type": "string",
      "optional": true
    }
  ]
}