{
  "name": "notion",
  "logo_url": "https://cdn.simpleicons.org/notion/000000",
  "oauth2": {
    "client_id": "NOTION_CLIENT_ID",
    "client_secret": "NOTION_CLIENT_SECRET",
    "auth_url": "https://api.notion.com/v1/oauth/authorize",
    "token_url": "https://api.notion.com/v1/oauth/token",
    "redirect_uri": "http://localhost:8083/oauth2/callback",
    "scopes": [],
    "user_info_url": "https://api.notion.com/v1/users/me",
    "refresh": {
      "enabled": false
    }
  },
  "mappings": [
    {
      "field_key": "provider_user_id",
      "json_path": "id",
      "type": "string"
    },
    {
      "field_key": "display_name",
      "json_path": "name",
      "type": "string"
    },
    {
      "field_key": "avatar_url",
      "json_path": "avatar_url",
      "type": "string"
    },
    {
      "field_key": "email",
      "json_path": "person",
      "type": "json"
    }
  ]
}
