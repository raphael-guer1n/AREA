SERVICE_NAME=auth
GLOBAL_NETWORK=area_network
JWT_SECRET=super-secret-key-change-me

# Database Configuration
DB_HOST=localhost
DB_INTERNAL_PORT=5432
DB_EXTERNAL_PORT=5433
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=auth_service_db

# Server Configuration
SERVER_PORT=8083

# Service Dependencies
# Use localhost for local development, use container name for Docker
SERVICE_SERVICE_URL=http://area_service_api:8084

# OAuth2 Provider Credentials
# These are referenced by the service-service configuration
# The service-service sends env var names (e.g., GOOGLE_CLIENT_ID) and AuthService resolves them

#google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

#github
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

#microsoft
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

#discord
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret

#dropbox
DROPBOX_CLIENT_ID=your-dropbox-client-id
DROPBOX_CLIENT_SECRET=your-dropbox-client-secret

#notion
