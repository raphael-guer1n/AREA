# Local dev env (npm run dev). Docker uses this same .env file.
# Gateway base URLs for local backend (gateway on 8080).
API_BASE_URL=http://localhost:8080/area_auth_api
NEXT_PUBLIC_API_BASE_URL=http://localhost:8080/area_auth_api
AREA_API_BASE_URL=http://localhost:8080/area_area_api
NEXT_PUBLIC_AREA_API_BASE_URL=http://localhost:8080/area_area_api
SERVICES_API_BASE_URL=http://localhost:8080/area_service_api
NEXT_PUBLIC_SERVICES_API_BASE_URL=http://localhost:8080/area_service_api

# Frontend URLs
NEXT_PUBLIC_SITE_URL=http://localhost:8081
NEXT_PUBLIC_OAUTH_CALLBACK_BASE=http://localhost:8081

# Cookie security (set true in HTTPS)
COOKIE_SECURE=false
SESSION_COOKIE_SECURE=false

# Optional: disable Google Fonts fetch
NEXT_FONT_GOOGLE_DISABLE=1
